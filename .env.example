# Copy this file to .env and fill values. Never commit .env.

# --- Database via single connection string (recommended for Aiven) ---
# Example (Aiven Service URI):
# DATABASE_URL=mysql://avnadmin:YOUR_PASSWORD@mysql-xxxxx-qcs-platform.b.aivencloud.com:13061/defaultdb?ssl-mode=REQUIRED

# --- Database: Local Docker (for reference) ---
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=qcs_user
# DB_PASSWORD=qcs_password
# DB_NAME=qcs_db
# DB_SSL=false

# --- Database: Aiven MySQL (SSL REQUIRED) ---
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=defaultdb
DB_SSL=true
# DB_SSL_MODE=required
# If Aiven fails without a CA, paste the CA PEM with newlines as \n
# DB_SSL_CA=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
# To accept Aiven's certificate (recommended true). Set to false only for debugging.
DB_SSL_REJECT_UNAUTHORIZED=true

# --- App settings ---
# Provided by host (Railway/Render) in production
# PORT=5000
# Public frontend origin for CORS (e.g., your Vercel URL)
CORS_ORIGIN=
# Where to store uploaded files (kept on disk by default)
UPLOAD_DIR=./uploads
# Strong secret for JWT
JWT_SECRET=
